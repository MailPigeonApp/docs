  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.png",
  "colors": {
    "primary": "#5451D4",
    "light": "#AE87FF",
    "dark": "#0D001D",
    "background": {
